<% extends 'article.html.skin' %>

<% subskin 'content' %>
<div id="heading">
  <h1><% article.title | titleize %></h1>
</div>

<div id="article-content">
  <p>
    <% article.text %>
  </p>

  <p>
    <small>
      <i>posted: BUG!</i><br />
